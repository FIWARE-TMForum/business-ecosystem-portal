<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_2_0.dtd">

<tiles-definitions>

    <definition name="app.anon" template="/WEB-INF/views/base.jsp">
    </definition>

    <definition name="app.auth" extends="app.anon">
        <put-attribute name="navbar" value="/WEB-INF/views/base-navbar.jsp" />
    </definition>

    <!-- ANONYMOUS USER -->

    <!-- Login View -->
    <definition name="app.landing" extends="app.anon">
        <put-attribute name="content" value="/WEB-INF/views/landing-content.jsp" />
    </definition>

    <!-- Error View -->
    <definition name="core.error" extends="app.anon">
        <put-attribute name="navbar" value="/WEB-INF/views/core/error-navbar.jsp" />
        <put-attribute name="content" value="/WEB-INF/views/core/error-content.jsp" />
    </definition>

    <!-- AUTHENTICATED USER -->

    <!-- Home View -->
    <definition name="app.home" extends="app.auth">
        <put-attribute name="content" value="/WEB-INF/views/home-content.jsp" />
        <put-attribute name="modals" value="/WEB-INF/views/home-modals.jsp" />
    </definition>

    <!-- My Stock View -->
    <definition name="app.mystock" extends="app.auth">
        <put-attribute name="content" value="/WEB-INF/views/mystock-content.jsp" />
        <put-attribute name="modals" value="/WEB-INF/views/mystock-modals.jsp" />
    </definition>

</tiles-definitions>